{
  "name": "gapp-back",
  "version": "0.0.1",
  "description": "Geanealogy tree",
  "repository": "git@github.com:arturasmckwcz/gapp-back.git",
  "author": "Arturas Mickiewicz <arturasmckwcz@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "compile:watch": "tsc --watch",
    "compile:clear": "rm -rf ./dist",
    "compile": "tsc",
    "start": "npm run compile && node --experimental-specifier-resolution=node ./dist/index.js",
    "dev": "PORT=3009 nodemon --experimental-specifier-resolution=node ./dist/index.js",
    "gen": "graphql-codegen --config codegen.yml",
    "docker:run": "node --experimental-specifier-resolution=node ./dist/index.js",
    "docker:build": "yarn compile:clear && yarn compile && docker build -t gapp/backend .",
    "docker:up": "yarn docker:build && docker-compose up -d",
    "docker:build:push": "yarn compile:clear && yarn compile && docker build -t arturasmckwcz/gapp-backend . && docker push arturasmckwcz/gapp-backend"
  },
  "dependencies": {
    "@apollo/server": "^4.3.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.16.4",
    "@graphql-codegen/typescript": "^2.8.7",
    "@graphql-codegen/typescript-resolvers": "^2.7.12",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
