{
  "name": "gapp-back",
  "version": "0.0.1",
  "description": "Geanealogy tree",
  "repository": "git@github.com:arturasmckwcz/gapp-back.git",
  "author": "Arturas Mickiewicz <arturasmckwcz@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "compile:watch": "tsc --watch",
    "compile:clear": "rm -rf ./dist",
    "compile": "tsc",
    "start": "node --experimental-specifier-resolution=node ./dist/index.js",
    "start:dev": "nodemon -e ts --exec 'tsc && node --trace-warnings --inspect=0.0.0.0:9229 --experimental-specifier-resolution=node ./dist/index.js' || exit 1",
    "dev": "PORT=3009 nodemon --experimental-specifier-resolution=node ./dist/index.js",
    "gen": "graphql-codegen --config codegen.yml",
    "migrate": "sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo",
    "docker:build:dev": "docker build -f ./Dockerfile.dev -t gapp/backend-dev .",
    "docker:up:dev": "yarn docker:build:dev && docker-compose -f ./docker-compose.dev.yml -p gapp-backend-dev up",
    "docker:build": "yarn compile:clear && yarn compile && docker build -t gapp/backend .",
    "docker-migrate": "docker-compose -p gapp-backend-dev -f docker-compose-dev.yml run --rm gapp-backend-dev wait-for-pg -- yarn run migrate",
    "docker-migrate-undo": "docker-compose -p gapp-backend-dev -f docker-compose-dev.yml run --rm gapp-backend-dev wait-for-pg -- yarn run migrate:undo",
    "docker:up": "yarn docker:build && docker-compose -p gapp-backend up -d",
    "docker:build:push": "yarn compile:clear && yarn compile && docker build -t arturasmckwcz/gapp-backend . && docker push arturasmckwcz/gapp-backend"
  },
  "dependencies": {
    "@apollo/server": "^4.3.2",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.28.0",
    "sequelize-typescript": "^2.1.5",
    "type-graphql": "^2.0.0-beta.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express-serve-static-core": "^4.17.33",
    "@types/node": "^18.11.18",
    "@types/validator": "^13.7.11",
    "nodemon": "^2.0.20",
    "sequelize-cli": "^6.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
