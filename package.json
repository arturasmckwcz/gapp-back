{
  "name": "gapp-back",
  "version": "0.0.1",
  "description": "Geanealogy tree",
  "repository": "git@github.com:arturasmckwcz/gapp-back.git",
  "author": "Arturas Mickiewicz <arturasmckwcz@gmail.com>",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "compile:watch": "tsc --watch",
    "compile:clear": "rm -rf ./dist",
    "compile": "tsc",
    "start": "node --experimental-specifier-resolution=node ./dist/index.js",
    "start:dev": "nodemon -e ts --exec 'tsc && node --trace-warnings --inspect=0.0.0.0:9229 --experimental-specifier-resolution=node ./dist/index.js || exit 1'",
    "dev": "PORT=3009 nodemon --experimental-specifier-resolution=node ./dist/index.js",
    "copy:sequelize:config": "cp -R ./src/db/config ./dist/db/config",
    "migration:create": "sequelize migration:create --migrations-path ./src/db/migrations",
    "migrate": "sequelize db:migrate --migrations-path ./dist/db/migrations",
    "migrate:undo": "sequelize db:migrate:undo",
    "migrate:run": "yarn migrate && yarn start",
    "docker:build:dev": "yarn compile:clear && yarn compile && yarn copy:sequelize:config && docker build -f Dockerfile.dev -t gapp/backend-dev .",
    "docker:up:dev": "yarn docker:build:dev && docker-compose -f ./docker-compose.dev.yml -p gapp-backend up",
    "docker:build": "yarn compile:clear && yarn compile && yarn copy:sequelize:config && docker build -t gapp-backend-api .",
    "docker:migrate": "yarn docker:build && docker-compose -f docker-compose.migrate.yml -p gapp-backend run --rm api scripts/hold_on_for_db then yarn migrate",
    "docker:migrate:undo": "yarn docker:build:dev && docker-compose -f docker-compose.dev.yml -p gapp-backend run --rm api scripts/hold_on_for_db then yarn migrate:undo",
    "docker:up": "yarn docker:build && docker-compose -p gapp-backend up",
    "docker:build:push": "yarn compile:clear && yarn compile && docker build -t arturasmckwcz/gapp-backend . && docker push arturasmckwcz/gapp-backend",
    "re-prettier": "npx prettier --write \"./**/*.{js,jsx,ts,tsx,json}\""
  },
  "dependencies": {
    "@apollo/server": "^4.3.2",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "pg": "^8.9.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.28.0",
    "sequelize-typescript": "^2.1.5",
    "type-graphql": "^2.0.0-beta.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express-serve-static-core": "^4.17.33",
    "@types/node": "^18.11.18",
    "@types/validator": "^13.7.11",
    "cpy-cli": "^4.2.0",
    "nodemon": "^2.0.20",
    "sequelize-cli": "^6.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
